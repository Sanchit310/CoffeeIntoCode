<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:src="@drawable/coffeeico"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            android:textColor="#663300"
            android:fontFamily="cursive"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/code"
            android:textSize="35sp"
            android:textColor="#000000"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"
        android:src="@drawable/mainpic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/cappuchino"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:text = "@string/minus"
            android:onClick="dec_capp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/value"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/capp_text_view"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text = "@string/plus"
            android:onClick="inc_capp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/expresso"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="102dp"
            android:text = "@string/minus"
            android:onClick="dec_exp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/value"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/exp_text_view"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text = "@string/plus"
            android:onClick="inc_exp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/macchiato"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-light"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="91dp"
            android:text = "@string/minus"
            android:onClick="dec_macc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/value"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/macc_text_view"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text = "@string/plus"
            android:onClick="inc_macc"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="@string/orderName"
            android:onClick="submitOrder"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#248f8f"
            android:id="@+id/price_text_view"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/money"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

</LinearLayout>
